{
    "exclude": [
        "node_modules",
        "typings/main.d.ts",
        "typings/main"
    ],
    "compilerOptions": {
        "target": "es5",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": false,
        "experimentalDecorators": true
       
    },
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts",
        "src/custom-typings.d.ts",
        "typings/browser.d.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}